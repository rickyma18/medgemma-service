# MedGemma Service Environment Variables
# Copy this file to .env and fill in the values

# Required: Firebase project ID
FIREBASE_PROJECT_ID=ent-voice-notes-app

# Optional: Firebase service account JSON (as a single-line string)
# If not set, uses Application Default Credentials (ADC)
# FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Optional: Path to service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Service environment: dev | staging | prod
SERVICE_ENV=dev

# =============================================================================
# AUTHENTICATION MODE
# =============================================================================
# Auth mode: firebase | dev
# - firebase: (default) Uses Firebase Admin SDK for token verification
# - dev: Accepts DEV_BEARER_TOKEN for local testing without Firebase
#        SECURITY: Cannot be used when SERVICE_ENV=prod
AUTH_MODE=dev
DEV_BEARER_TOKEN=dev-token

# =============================================================================
# EXTRACTOR BACKEND CONFIGURATION
# =============================================================================
# Backend options: mock | vllm | openai_compat
# - mock: returns placeholder data (for testing, no GPU required)
# - vllm: calls vLLM OpenAI-compatible API (requires NVIDIA GPU)
# - openai_compat: calls any OpenAI-compatible API (LM Studio, Ollama, etc.)
EXTRACTOR_BACKEND=mock

# -----------------------------------------------------------------------------
# vLLM Configuration (only used when EXTRACTOR_BACKEND=vllm)
# -----------------------------------------------------------------------------
VLLM_BASE_URL=http://127.0.0.1:8000
VLLM_MODEL=google/medgemma-4b-it
VLLM_TIMEOUT_MS=4500

# -----------------------------------------------------------------------------
# OpenAI-Compatible Configuration (only used when EXTRACTOR_BACKEND=openai_compat)
# Works with: LM Studio, Ollama, LocalAI, text-generation-webui, etc.
# -----------------------------------------------------------------------------
OPENAI_COMPAT_BASE_URL=http://127.0.0.1:1234
OPENAI_COMPAT_MODEL=medgemma-4b-it

OPENAI_COMPAT_TIMEOUT_MS=30000

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# HOST=0.0.0.0
# PORT=8080
